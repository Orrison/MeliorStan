{
    "name": "orrison/messstan",
    "description": "Provides PHPStan rules based on PHPMD rules.",
    "keywords": [
        "phpstan",
        "phpstan-rules"
    ],
    "homepage": "https://github.com/Orrison/messstan",
    "type": "phpstan-extension",
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "Orrison\\MessStan\\": "src/",
            "Orrison\\MessStan\\Tests\\": "tests/"
        }
    },
    "authors": [
        {
            "name": "Kevin Ullyott",
            "email": "ullyott.kevin@gmail.com"
        }
    ],
    "require": {
        "php": "^8.3"
    },
    "require-dev": {
        "phpstan/phpstan": "^2.1",
        "phpunit/phpunit": "^12.2",
        "friendsofphp/php-cs-fixer": "^3.76",
        "brianium/paratest": "^7.10"
    },
    "scripts": {
        "test": [
            "paratest --configuration phpunit.xml"
        ],
        "cs-fix": [
            "export PHP_CS_FIXER_IGNORE_ENV=1 ; ./vendor/friendsofphp/php-cs-fixer/php-cs-fixer fix -v --config=./php-cs-fixer.php"
        ],
        "format": [
            "@cs-fix"
        ],
        "phpstan": [
            "./vendor/bin/phpstan analyse -c phpstan.neon.dist"
        ],
        "analyze": [
            "@phpstan"
        ]
    }
}
