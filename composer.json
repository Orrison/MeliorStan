{
    "name": "orrison/meliorstan",
    "description": "Provides PHPStan rules for improved code quality by detecting code smells and possible issues. In addition to enforcing particular naming and code style conventions to reduce bike-shedding.",
    "keywords": [
        "phpstan",
        "phpstan-rules"
    ],
    "homepage": "https://github.com/Orrison/meliorstan",
    "type": "phpstan-extension",
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "Orrison\\MeliorStan\\": "src/",
            "Orrison\\MeliorStan\\Tests\\": "tests/"
        }
    },
    "authors": [
        {
            "name": "Kevin Ullyott",
            "email": "ullyott.kevin@gmail.com"
        }
    ],
    "require": {
        "php": "^8.3",
        "phpstan/phpstan": "^2.1"
    },
    "require-dev": {
        "phpunit/phpunit": "^12.2",
        "friendsofphp/php-cs-fixer": "^3.76",
        "brianium/paratest": "^7.10"
    },
    "scripts": {
        "test": [
            "paratest --configuration phpunit.xml"
        ],
        "cs-fix": [
            "export PHP_CS_FIXER_IGNORE_ENV=1 ; ./vendor/friendsofphp/php-cs-fixer/php-cs-fixer fix -v --config=./php-cs-fixer.php"
        ],
        "format": [
            "@cs-fix"
        ],
        "phpstan": [
            "./vendor/bin/phpstan analyse -c phpstan.neon.dist"
        ],
        "analyze": [
            "@phpstan"
        ]
    }
}
